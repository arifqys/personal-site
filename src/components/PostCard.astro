---
export interface Props {
	url: string;
	title: string;
	description: string;
	pubDate: string;
  image: string;
  tags?: string[];
}

const { url, title, description, pubDate, image, tags } = Astro.props;
---

<a href={url}>
  <li class="flex gap-x-4 p-4 rounded-lg bg-gray-200 hover:bg-white dark:bg-gray-900 hover:dark:bg-gray-700 transition-all">
    <img
      class="rounded-lg h-32 w-32 object-cover"
      src={image}
      alt={title}
    >
    <div class="flex flex-col gap-y-1">
      <h2 class="text-lg font-semibold">
        {title}
      </h2>
      <p>
        {description}
      </p>
      <time
        class="text-sm text-gray-700 dark:text-gray-300"
        datetime={pubDate}
      >
        {new Date(pubDate).toLocaleDateString('en-us', {
          year: 'numeric',
          month: 'short',
          day: 'numeric',
        })}
      </time>
      <div class="flex gap-1">
        {
          tags?.map(tag => (
            <span class="text-xs font-bold rounded-md text-gray-600 dark:text-gray-400">{tag}</span>
          ))
        }
      </div>
    </div>
  </li>
</a>
